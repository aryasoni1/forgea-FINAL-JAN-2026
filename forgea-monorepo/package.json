{
  "name": "forgea-monorepo",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=20.11.0 <21"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "prettier:check": "pnpm -w exec prettier --check \"**/*.{js,ts,tsx,jsx,json,md,css,scss,html}\"",
    "prettier:write": "pnpm -w exec prettier --write \"**/*.{js,ts,tsx,jsx,json,md,css,scss,html}\""
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "eslint": "9.39.2",
    "eslint-plugin-boundaries": "4.2.1",
    "prettier": "3.2.0",
    "turbo": "^2.1.3",
    "typescript": "5.9.3"
  }
}
